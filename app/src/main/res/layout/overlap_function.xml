<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:id="@+id/overLap"
    app:layout_behavior="@string/bottom_sheet_behavior"
    android:layout_height="450dp"
    android:layout_marginBottom="40dp"
    app:behavior_peekHeight="355dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:layout_marginBottom="20dp"
        android:orientation="vertical">



        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">





            <LinearLayout android:orientation="horizontal"
                android:layout_height="fill_parent"
                android:layout_width="fill_parent">


                <TextView
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:textColor="@color/black"
                    android:layout_marginBottom="15dp"
                    android:text="Types of Vehicle"
                    android:textSize="20sp"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="fill_parent"
                    android:gravity="center"
                    android:textColor="@color/black"
                    android:layout_marginBottom="15dp"
                    android:text="Prices"
                    android:textSize="20sp"/>

            </LinearLayout>


            <LinearLayout android:orientation="horizontal"
                android:layout_height="fill_parent"
                android:layout_width="fill_parent">

                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="100dp"
                    android:layout_weight="1"
                    android:id="@+id/CardView"
                    android:layout_rowWeight="1"
                    android:layout_columnWeight="1"
                    android:layout_marginLeft="20dp"
                    android:layout_marginBottom="20dp"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="16dp">


                    <LinearLayout
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_margin="16dp"
                        android:layout_width="wrap_content"
                        android:orientation="vertical">


                        <ImageView
                            android:layout_width="100dp"
                            android:layout_height="50dp"
                            android:id="@+id/truckVehicle"
                            android:layout_gravity="top"
                            android:src="@drawable/auto1"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Ape"
                            android:textColor="@color/black"
                            android:textSize="14sp"
                            android:id="@+id/card1"
                            android:textStyle="bold"
                            android:layout_gravity="center_horizontal"
                            android:textAlignment="center"/>
                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                   android:gravity="center"
                    android:layout_weight="1"
                    android:textColor="@color/black"
                    android:layout_marginBottom="15dp"
                    android:text="Rs. ---/"
                    android:textSize="20sp"/>

            </LinearLayout>

            <LinearLayout android:orientation="horizontal"
                android:layout_height="fill_parent"
                android:layout_width="fill_parent">

                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="100dp"
                    android:id="@+id/CardView2"
                    android:layout_rowWeight="1"
                    android:layout_columnWeight="1"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:layout_marginBottom="20dp"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="16dp">


                    <LinearLayout
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_margin="16dp"
                        android:layout_width="wrap_content"
                        android:orientation="vertical">


                        <ImageView
                            android:layout_width="100dp"
                            android:layout_height="50dp"
                            android:layout_gravity="top"
                            android:src="@drawable/auto2"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Ace"
                            android:textColor="@color/black"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:layout_gravity="center_horizontal"
                            android:textAlignment="center"/>
                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:textColor="@color/black"
                    android:layout_marginBottom="15dp"
                    android:text="Rs. ---/"
                    android:textSize="20sp"/>

            </LinearLayout>

            <LinearLayout android:orientation="horizontal"
                android:layout_height="fill_parent"
                android:layout_width="fill_parent">

                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="100dp"
                    android:id="@+id/CardView3"
                    android:layout_rowWeight="1"
                    android:layout_columnWeight="1"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:layout_marginBottom="20dp"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="16dp">


                    <LinearLayout
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_margin="16dp"
                        android:layout_width="wrap_content"
                        android:orientation="vertical">


                        <ImageView
                            android:layout_width="100dp"
                            android:layout_height="50dp"
                            android:layout_gravity="top"
                            android:src="@drawable/auto3"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="407"
                            android:textColor="@color/black"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:layout_gravity="center_horizontal"
                            android:textAlignment="center"/>
                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:textColor="@color/black"
                    android:layout_marginBottom="15dp"
                    android:text="Rs. ---/"
                    android:textSize="20sp"/>

            </LinearLayout>

            <LinearLayout android:orientation="horizontal"
                android:layout_height="fill_parent"
                android:layout_width="fill_parent">

                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="100dp"
                    android:id="@+id/CardView4"
                    android:layout_rowWeight="1"
                    android:layout_columnWeight="1"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:layout_marginBottom="20dp"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="16dp">


                    <LinearLayout
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_margin="16dp"
                        android:layout_width="wrap_content"
                        android:orientation="vertical">


                        <ImageView
                            android:layout_width="100dp"
                            android:layout_height="50dp"
                            android:layout_gravity="top"
                            android:src="@drawable/auto4"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Truck"
                            android:textColor="@color/black"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:layout_gravity="center_horizontal"
                            android:textAlignment="center"/>
                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:textColor="@color/black"
                    android:layout_marginBottom="15dp"
                    android:text="Rs. ---/"
                    android:textSize="20sp"/>

            </LinearLayout>










        </LinearLayout>
















        </LinearLayout>












    </ScrollView>

</LinearLayout>
